{
    "name": "@ourchitecture/devex",
    "version": "0.0.1",
    "description": "",
    "keywords": [],
    "author": "Ourchitecture",
    "license": "MIT OR CC0-1.0",
    "type": "module",
    "engines": {
        "node": ">=18.18.2",
        "pnpm": ">=8.9.2"
    },
    "engineStrict": true,
    "scripts": {
        "test": "wireit",
        "test:formatting": "wireit",
        "format": "prettier --write --config ./.prettierrc.yaml --ignore-path ./.gitignore --ignore-path ./.prettierignore ./",
        "test:formatting:changes": "lint-staged",
        "prepare": "husky install"
    },
    "wireit": {
        "test": {
            "dependencies": [
                "test:formatting"
            ]
        },
        "test:formatting": {
            "command": "node ./src/tasks/node/check/formatting.js",
            "files": [
                "./**/*",
                "!.husky",
                "!.task-output",
                "!pnpm-lock.yaml"
            ],
            "output": [
                "./.task-output/src/tasks/node/check/formatting.js/**"
            ]
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "dotenv": "^16.3.1",
        "glob": "^10.3.10",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "markdownlint-cli2": "^0.10.0",
        "prettier": "^3.0.3",
        "winston": "^3.11.0",
        "wireit": "^0.14.0"
    },
    "resolutions": {
        "@types/react": "^17",
        "@types/react-dom": "^17"
    }
}
